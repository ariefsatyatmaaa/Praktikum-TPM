<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="197dp"
            android:layout_height="247dp"
            android:scaleType="fitXY"
            android:src="@drawable/a7x"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20sp">

            <TextView
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:text="A7x - So Far Away"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="">
            </TextView>
            <TextView
                android:layout_width="190dp"
                android:layout_height="340dp"
                android:lineSpacingExtra="10pt"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:text="How do I live without the ones I love?
                                    Time still turns the pages of the book its burned
                   Place and time always on my mind"
                android:textColor="#ffffff">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"

                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic">
            </TextView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="340dp"
                android:gravity="center_horizontal"
                android:text="~I HAVE SO MUCH TO SAY BUT YOU SO FAR AWAY~"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="#ffffff">
            </TextView>

        </LinearLayout>

        <ImageView
            android:layout_width="185dp"
            android:layout_height="282dp"
            android:layout_marginLeft="15sp"
            android:scaleType="fitXY"
            android:src="@drawable/sofaraway"></ImageView>

    </LinearLayout>

</LinearLayout>